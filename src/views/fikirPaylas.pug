.container.mt-5
    .form
      form(action=`/add` method='POST')
          .mb-2.information
              .inputTags
                  label.form-label(for='name') Adınız:
                  input.form-control.input(type='text' required autocomplete='off' placeholder='Adınız...' id='name' name='ad')
              .inputTags.surname
                  label.form-label(for='surname') Soyadınız:
                  input.form-control.input(type='text' required autocomplete='off' placeholder='Soyadınız...' id='surname' name='soyad')
          
          .mb-2.w-50
              .inputTags
                  label.form-label(for='department') Bölümünüz:
                  select.list-group.w-100.p-2(name='bolum' id='department' required)
                      option.list-group-item( value='yazilim') Yazılım Mühendisliği                   
                      option.list-group-item( value='havacilikveuzay') Havacılık ve Uzay Mühendisliği 
                      option.list-group-item( value='makine') Makine Mühendisliği                      
                      option.list-group-item( value='elektrik') Elektrik / Elektronik Mühendisliği                 

          .mb-2.w-50
              .inputTags
                  label.form-label(for='year') Sınıfınız:
                  select.list-group.w-100.p-2(name='sinif' id='year' required)
                      option.list-group-item( value='Hazırlık') Hazırlık 
                      option.list-group-item( value='1') 1. 
                      option.list-group-item( value='2') 2.
                      option.list-group-item( value='3') 3.
                      option.list-group-item( value='4') 4.

          .mb-2.w-50
              label.form-label(for='activity') Etkinlik Başlığı :
              .inputTags
                  input.form-control.input(type='text' required autocomplete='off' placeholder='Etkinlik Başlığı...' id='activity' name='title')
          
          .mb-2.w-50
              label.form-label(for='categoryy') Kategori:
              .inputTags
                  select.list-group.w-100.p-2(name='category' id='categoryy' required)
                      option.list-group-item( value='spor') Spor 
                      option.list-group-item( value='sanat') Sanat 
                      option.list-group-item( value='turnuva') Turnuva 
                      option.list-group-item( value='kulturel') Kültürel 
                      option.list-group-item( value='muzik') Müzik 

          .button.mt-3.w-50
              input.form-control.input.btn.btn-primary.w-100(type='submit' value='Ekle')